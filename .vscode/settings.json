{
  "editor.formatOnSave": true,
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.options": {
    "ignorePattern": [
      "dist/**/*",
      "node_modules/**/*",
      "build/**/*",
      "out/**/*"
    ]
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "typescript.tsdk": "node_modules/typescript/lib"
}
